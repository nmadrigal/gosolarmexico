@model WebApp.Models.ContactModel
    <section id="contact" class="contact bg-warning">
        <h1>Contacto</h1>
        @using (Html.BeginForm("ContactForm", "Home", FormMethod.Post))
        {
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                    <p>
                        <label>Nombre</label>
                        @*<input class="form-control" name="contact-name" type="text" required />*@
                        @Html.TextBoxFor(m => m.Name, new { @class="form-control", @placeholder = "Nombre (s)" })
                    </p>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                    <p>
                        <label>Correo</label>
                        @*<input class="form-control" name="contact-correo" type="email" required/>*@
                        @Html.TextBoxFor(m => m.Email, new { @class="form-control", @placeholder = "Correo" })
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                    <p>
                        <label>Telefono</label>
                        @*<input class="form-control" name="contact-name" type="text" required/>*@
                        @Html.TextBoxFor(m => m.Phone, new { @class="form-control", @placeholder = "Telefono" })
                    </p>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                    <p>
                        <label>Estado</label>
                        @Html.DropDownList("State.Text", new SelectList(Enumerable.Empty<SelectListItem>()), "Seleccionar estado", new { @class = "state form-control" })
                        @*<select class="state form-control" required>                            
                                <option value="0">Estado</option>
                        </select>*@
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <p>
                        <label>Comentarios</label>
                        @Html.TextArea("Message", new { @class="form-control" })
                        @*<textarea class="form-control" required></textarea>*@
                    </p>
                </div>
            </div>
            @Html.ValidationSummary(true)
            <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-6 col-6">
                    <button type="submit" class="btn btn-submit">Enviar</button>
                    @*<p class="btn btn-submit">
                        <a href="#">Submit</a>
                    </p>*@
                </div>
            </div>
        }
    </section>