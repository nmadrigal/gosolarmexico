@{
    Layout = "~/Views/Shared/_MobileLayout.cshtml";
}
<section class="full-grid">				
	<ul class="example-orbit" data-orbit data-options="animation:slide;
                  pause_on_hover:true;
                  animation_speed:500;
                  navigation_arrows:true;
                  bullets:false;">
        <li>
			<img src="Images/slide1.jpg" alt="Slide 1"/>
			<div class="orbit-caption">
                <h2>Slide caption 1</h2>
			</div>
		</li>
		<li>
			<img src="Images/slide2.jpg" alt="Slide 2"/>
			<div class="orbit-caption">
                <h2>Slide caption 2</h2>
			</div>
		</li>
        <li>
			<img src="Images/slide3.jpg" alt="Slide 3"/>
			<div class="orbit-caption">
				<h2>Slide caption 3</h2>
	        </div>
		</li>
		<li>
			<img src="Images/slide4.jpg" alt="Slide 4"/>
			<div class="orbit-caption">
				<h2>Slide caption 4</h2>
	        </div>
		</li>
		<li>
			<img src="Images/slide5.jpg" alt="Slide 5"/>
			<div class="orbit-caption">
				<h2>Slide caption 5</h2>
	        </div>
		</li>
    </ul>
</section>
<div id="mainDiv" class="container-fluid main-menu">
    <div class="row">
        <div class="small-6 medium-6 large-6 left">
            <a href="@Url.Action("Index", "Team")" class="th">
                <span class="icn-lg icn-people"></span>
                <label>Recomendados</label>
            </a>
        </div>
        <div class="small-6 medium-6 large-6 left">
            <a href="@Url.Action("Index", "Map")" class="th bg-primary">
                <span class="icn-lg icn-pin"></span>
                <label>Ubicacion</label>
            </a>
        </div>
        <div class="small-6 medium-6 large-6 left">
            <a href="#" class="th bg-primary">
                <span class="icn-lg icn-org"></span>
                <label>Embajadores</label>
            </a>
        </div>
        <div class="small-6 medium-6 large-6 left">
            <a href="@Url.Action("NewReferral", "Team")" class="th">
                <span class="icn-lg icn-settings"></span>
                <label>Ajustes</label>
            </a> 
            @*<a href="@Url.Action("NewReferral", "Team")">
                <span class="icn icn-add"></span>
            </a>*@
        </div>
        @if (User.IsInRole("Admin"))
        {
            <div class="col-xs-12">
                <a href="@Url.Action("Index", "Panel")">
                    <img class="img-menu" src="~/Images/admin.png" />
                </a>
            </div>   
        }
    </div>
</div>
