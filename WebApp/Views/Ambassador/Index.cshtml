@{
    Layout = "~/Views/Shared/_MobileLayout.cshtml";
}
<section class="carousel-container">				
	<div id="carousel-home" class="carousel slide" data-ride="carousel">
		<!-- Indicators -->
		<ol class="carousel-indicators">
		<li data-target="#carousel-home" data-slide-to="0" class="active"></li>
		<li data-target="#carousel-home" data-slide-to="1"></li>
		<li data-target="#carousel-home" data-slide-to="2"></li>
		<li data-target="#carousel-home" data-slide-to="3"></li>
		<li data-target="#carousel-home" data-slide-to="4"></li>
		</ol>

		<!-- Wrapper for slides -->
		<div class="carousel-inner">
			<div class="item active">
				<img src="Images/slide1.jpg" alt="Slide 1"/>
				<div class="carousel-caption">
                    <h2>Slide caption 1</h2>
				</div>
			</div>
			<div class="item">
				<img src="Images/slide2.jpg" alt="Slide 2"/>
				<div class="carousel-caption">
                    <h2>Slide caption 2</h2>
				</div>
		    </div>

            <div class="item">
				<img src="Images/slide3.jpg" alt="Slide 3"/>
				<div class="carousel-caption">
					<h2>Slide caption 3</h2>
	            </div>
			</div>

			<div class="item">
				<img src="Images/slide4.jpg" alt="Slide 4"/>
				<div class="carousel-caption">
					<h2>Slide caption 4</h2>
	            </div>
			</div>
			<div class="item">
				<img src="Images/slide5.jpg" alt="Slide 5"/>
				<div class="carousel-caption">
					<h2>Slide caption 5</h2>
	            </div>
			</div>
        </div>
		<!-- Controls -->
		<a class="left carousel-control" href="#carousel-home" data-slide="prev">
			<span class="glyphicon glyphicon-chevron-left"></span>
		</a>
		<a class="right carousel-control" href="#carousel-home" data-slide="next">
			<span class="glyphicon glyphicon-chevron-right"></span>
		</a>
	</div>
</section>
<div id="mainDiv" class="container-fluid">
    <div class="row-fluid">
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <a href="@Url.Action("Index", "Team")">
                <img class="img-menu" src="~/Images/teamicon.png" /></a>
        </div>
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <a href="@Url.Action("NewReferral", "Team")">
                <img class="img-menu" src="~/Images/add_referral.png" /></a>
        </div>
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <a href="@Url.Action("Index", "Map")">
                <img class="img-menu" src="~/Images/map_icon.png" />
            </a>
        </div>
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <a href="#">
                <img class="img-menu" src="~/Images/graph_icon.png" />
            </a>
        </div>
        @if (User.IsInRole("Admin"))
        {
            <div class="col-xs-12">
                <a href="@Url.Action("Index", "Panel")">
                    <img class="img-menu" src="~/Images/admin.png" />
                </a>
            </div>   
        }
    </div>
</div>
