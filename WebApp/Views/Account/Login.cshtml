@model WebApp.Models.LoginModel
@{
    Layout = "~/Views/Shared/_MobileLoginLayout.cshtml";
}

<section class="login-container">
    <div class="login-content">
        <div class="row">
            <figure class="col-lg-12">
                <img src="/Images/logo-lg.png" />
            </figure>
        </div>
        <div class="row">
            <div class="small-12 medium-12 large-12 columns">
                @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    @*<p class="hide">
                        @Html.LabelFor(m => m.UserName)
                    </p>*@
                    <p class="username">
                        <span class="icn-sm icn-add-person"></span>
                        @Html.TextBoxFor(m => m.UserName, new { @placeholder="Usuario / Correo" })
                    </p>
                    @*<p class="hide">
                        @Html.ValidationMessageFor(m => m.UserName, "Requerido")
                    </p>
                    <p class="hide">
                        @Html.LabelFor(m => m.Password)
                    </p>*@
                    <p class="password">
                        <span class="icn-sm icn-lock"></span>
                        @Html.PasswordFor(m => m.Password, new { @placeholder="Contraseña" })
                    </p>
                    @*<p class="hide">
                        @Html.ValidationMessageFor(m => m.Password, "Requerido")
                    </p>*@
                    <div class="row actions">
                        <ul class="small-12 medium-12 large-12 columns">
                            <li>
                                <a class="link-primary" href="@Url.Action("Register", "Account")">Nuevo Embajador</a>
                            </li>
                            <li>
                                <a class="link-primary forgot-password" href="#" data-reveal-id="fogotPassword">Olvide mi contraseña</a>
                            </li>
                        </ul>            
                        <p class="small-12 medium-12 large-12 columns">
                            <button class="button radius expand" type="submit">Entrar</button>
                        </p>    
                    </div>  
                }
            </div>
        </div>
    </div>
    <div class="sepia-filter"></div>
</section>

<div id="forgotPasswordModal" class="reveal-modal small forgot-password-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog">
  <h2 id="modalTitle">Recuperar contraseña</h2>
  <div data-alert class="alert-box info">
      <p>Por favor escriba su direccion de correo electronico, despues de presione el boton "Recuperar", usted recibira un correo electronico con las instrucciones para recuperar su contraseña</p>
      <a href="#" class="close">&times;</a>
    </div>
    <form>
        <div class="row">
            <div class="small-12 medium-12 large-12">
                <p>
                    <input type="email" placeholder="Correo" />
                </p>
            </div>
        </div>
        <div class="row actions">
            <div class="small-12 medium-12 large-12">
                <button type="submit" class="button radius expand">Recuperar</button>
            </div>
        </div>
    </form>
  <a class="close-reveal-modal" aria-label="Close">&#215;</a>
</div>
