@model WebApp.Models.LocalPasswordModel

@using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post))
{   
    @*<div class="container-fluid" style="text-align: center; margin-top: 15px">*@
        
        <div class="row">
            <div class="small-12 medium-12 large-12">
                @*@Html.LabelFor(m => m.OldPassword, "Contraseña actual")*@         
                @Html.PasswordFor(m => m.OldPassword, new {@placeholder = "Contraseña actual" })
                @*@Html.ValidationMessageFor(m => m.OldPassword, "Requerido")*@
            </div>
        </div>
        <div class="row">
            <div class="small-12 medium-12 large-12">
                @*@Html.LabelFor(m => m.NewPassword, "Contraseña nueva")*@            
                @Html.PasswordFor(m => m.NewPassword,new {@placeholder = "Contraseña nueva" })
            </div>
        </div>
        <div class="row">
            <div class="small-12 medium-12 large-12">
                @*@Html.LabelFor(m => m.ConfirmPassword, "Confirmar contraseña")*@           
                @Html.PasswordFor(m => m.ConfirmPassword,new {@placeholder = "Confirmar contraseña" })
            </div>
        </div>
        <div class="row actions">
            <div class="small-12 medium-12 large-12 columns">
                <button type="submit" class="button radius expand">Aceptar</button>
            </div>
        </div>
    @*</div>*@   
}
