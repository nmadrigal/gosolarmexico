@model WebApp.Models.LocalPasswordModel

@using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post))
{   
    <div class="container-fluid" style="text-align: center; margin-top: 15px">
        <div class="row">
            <div>
                <span style="color: white">
                    <h3>Cambiar contraseña</h3>
                </span>
            </div>
        </div>
        <div class="row" style="margin-top: 10px">
            <div>
                @Html.LabelFor(m => m.OldPassword, "Password actual", new { style = "font-size: small;font-family:sans-serif;color:white" })
            </div>
            <div>
                @Html.PasswordFor(m => m.OldPassword)
            </div>
            <div>
                @Html.ValidationMessageFor(m => m.OldPassword, "Requerido")
            </div>
        </div>
        <div class="row">
            <div>
                @Html.LabelFor(m => m.NewPassword, "Password nuevo", new { style = "font-size: small;font-family:sans-serif;color:white" })
            </div>
            <div>
                @Html.PasswordFor(m => m.NewPassword)
            </div>
            <div>
                @Html.ValidationMessageFor(m => m.NewPassword)
            </div>
        </div>
        <div class="row">
            <div>
                @Html.LabelFor(m => m.ConfirmPassword, "Confirmar password", new { style = "font-size: small;font-family:sans-serif;color:white" })
            </div>
            <div>
                @Html.PasswordFor(m => m.ConfirmPassword)
            </div>
            <div>
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>
            <div>
                @Html.ValidationSummary()
            </div>
        </div>
        <div class="row">
            <div style="margin-top: 15px">
                <button type="submit" class="btn btn-lg btn-primary">Enviar</button>
            </div>
        </div>
    </div>   
}

