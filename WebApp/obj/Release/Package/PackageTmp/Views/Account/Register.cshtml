@model WebApp.Models.CustomerModel
@{
    Layout = "~/Views/Shared/_MobileLoginLayout.cshtml";
    //ViewBag.Title = "Register";
}
<nav class="tab-bar bg-primary">
      <section class="left-small">
        @*<a class="left-off-canvas-toggle menu-icon toggle-topbar" href="#"><span></span></a>*@
        <a class="icn-sm icn-arrow-left" href="#"></a>
      </section>

      <section class="middle tab-bar-section">
        <h1 class="title">Gosolar Mexico</h1>
      </section>

      @*<section class="right-small">
        <a class="right-off-canvas-toggle menu-icon" href="#"><span></span></a>
      </section>*@
    </nav>

<section class="new-ambassador">    
    <h3 class="text-center">Se parte de nuestro equipo</h3>    
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken() 
        <div class="container">
            <div class="row">
                   <div class="small-12 medium-6 large-4 columns">
                        <p>
                            @*@Html.LabelFor(m => m.LastName)*@
                            @Html.TextBoxFor(m => m.LastName, "Requerido", new { @placeholder = "Apellido paterno" })
                        </p>
                        @*@Html.ValidationMessageFor(m => m.LastName, "Requerido")*@
                    </div>
              
                    <div class="small-12 medium-6 large-4 columns">
                        <p>
                            @*<label>Apellido materno</label>*@
                            <input type="text" placeholder="Apellido materno" />
                        </p>
                    </div>
           
                    <div class="small-12 medium-6 large-4 columns">
                        <p>
                            @*@Html.LabelFor(m => m.Name)*@
                            @Html.TextBoxFor(m => m.Name, new { @placeholder = "Nombre (s)" })
                        </p>   
                        @*@Html.ValidationMessageFor(m => m.Name, "Requerido")*@             
                    </div>
               
                    <div class="small-12 medium-6 large-5 columns">
                        <p>
                            @*@Html.LabelFor(m => m.Email)*@            
                            @Html.TextBoxFor(m => m.Email, new { @placeholder = "Correo" })
                        </p>                
                        @*@Html.ValidationMessageFor(m => m.Email, "Requerido")*@                
                    </div>  
                
                    <div class="small-6 medium-5 large-3 columns">
                        <p>
                            @*@Html.LabelFor(m => m.Phone)*@           
                            @*@Html.TextBoxFor(m => m.Phone, new { @placeholder = "Telefono" })*@
                            <input type="text" id="Phone" name="Phone" required="required" pattern="\d*" />
                        </p>
                    </div>
               
                    <div class="small-6 medium-2 large-2 columns">
                        <p>
                            @*<label>Edad</label>*@
                            <input type="number" min="17" max="90" value="18"/>
                        </p>
                    </div>
                
            </div>
        
    
        @Html.ValidationSummary(true)
       @* <div class="row text-center">
            <div class="small-12 medium-12 large-12">
                <p>
                    <a href="#" class="button small secondary radius get-address" data-reveal-id="getAddressModal">Obtener direccion</a>
                </p>
            </div>
        </div>*@
        <div class="container">
            <div class="small-12 medium-12 large-12 columns">
                <button type="submit" class="button radius expand">Agregar</button>
            </div>
        </div>
    </div>
    }

</section>
<script>
    $(".tab-bar .left-small .icn-arrow-left").bind("click", function (e) {
        e.preventDefault();
        window.history.back();
    });
</script>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
